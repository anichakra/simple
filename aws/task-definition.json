{
	"family": "simple-rest-service-task",
	"networkMode": "awsvpc",
	"containerDefinitions": [
		{
			"name": "simple-rest-service-container",
			"image": "%AWS_ACCOUNT%.dkr.ecr.us-east-1.amazonaws.com/simple-rest-service:%BUILD_TAG%",
			"environment": [
				{
					"name": "AWS_REGION",
					"value": "us-east-1"
				},
				{
					"name": "AWS_XRAY_DAEMON_ADDRESS",
					"value": "xray-daemon:2000"
				}
			],
			"portMappings": [
				{
					"containerPort": 8080,
					"hostPort": 8080,
					"protocol": "tcp"
				}
			],
			
			
			"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-region": "us-east-1",
					"awslogs-stream-prefix": "ecs",
					"awslogs-group": "simple-rest-service"
				}
			}
		},
		{
			"name": "xray-daemon",
			"image": "%AWS_ACCOUNT%.dkr.ecr.us-east-1.amazonaws.com/amazon/aws-xray-daemon:1",
			"portMappings": [
				{
					"protocol": "udp",
					"containerPort": 2000,
					"hostPort": 2000
				}
			],
			"logConfiguration": {
				"logDriver": "awslogs",
				"options": {
					"awslogs-region": "us-east-1",
					"awslogs-stream-prefix": "ecs",
					"awslogs-group": "simple-rest-service"
				}
			},
			"essential": true,
			"volumesFrom": []
		}
	],
	"requiresCompatibilities": [
		"FARGATE"
	],
	"cpu": "512",
	"memory": "1024",
	"executionRoleArn": "arn:aws:iam::%AWS_ACCOUNT%:role/ecsTaskExecutionRole"
}

